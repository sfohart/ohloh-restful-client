<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="ohloh" transaction-type="RESOURCE_LOCAL">
	    
	    
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.account.OhLohAccount</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.activityfact.OhLohActivityFact</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.analysis.OhLohAnalysis</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.analysis.OhLohAnalysisLanguage</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.contributorfact.OhLohContributorFact</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.contributorfact.OhLohContributorLanguageFact</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.enlistment.OhLohEnlistment</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.enlistment.OhLohRepository</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.factoid.OhLohFactoid</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.kudo.OhLohKudo</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.kudoskore.OhLohKudoScore</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.project.OhLohLicense</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.project.OhLohProject</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.project.OhLohTag</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.sizefact.OhLohSizeFact</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.stack.OhLohStack</class>
		<class>br.ufba.dcc.mestrado.computacao.ohloh.data.stack.OhLohStackEntry</class>
		
		
		<properties>
			<!--  https://github.com/hibernate/hibernate-orm/pull/396  -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />			
			
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pesquisaorientada" />
			
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
			<property name="hibernate.jdbc.batch_size" value="0" />
			
			<!-- 
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			 -->
			
			<property name="hibernate.generateDdl" value="true"/>
			<property name="hibernate.use_sql_comments" value="true"/>
		</properties>

	</persistence-unit>

</persistence>
